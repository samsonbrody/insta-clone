<% layout('layouts/boilerplate') -%>
<form
  class="validated-form form-control"
  action="/posts"
  method="POST"
  enctype="multipart/form-data"
  novalidate
>
  <h1>New Post</h1>
  <label class="form-label" for="title">Title:</label>
  <input
    class="form-control"
    type="text"
    name="post[title]"
    id="title"
    required
  />
  <input
    class="form-control mt-3 mb-3"
    type="file"
    name="image"
    multiple
    id=""
  />
  <label class="form-label" for="caption">Caption:</label>
  <input
    class="form-control"
    type="text"
    name="post[caption]"
    id="caption"
    required
  />
  <button class="btn btn-success mt-4 mb-3">Submit</button>
</form>
